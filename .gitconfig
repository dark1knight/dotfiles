[core]
    editor = vim

[color]
    ui = auto

[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold

[diff]
    tool = vimdiff

[alias]
    s = status -uno
    b = branch
    l = log
    ls = ls-files
    c = commit
    pu = push -u
    ##### diff
    d = diff
    dc = diff --cached


